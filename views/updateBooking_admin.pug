extends base

block append head
    link(rel='stylesheet' href='/css/allProducts.css')
    link(rel='stylesheet' href='/css/bookings_admin.css')


block content
    main#products.prodocts
      .all-prodocuts-con.all-prodocuts-con_booking
            .product-con.product-con-booking.product_admin-update
                .order-date-total
                    - const dateTime = order.createdAt.toLocaleString({month: 'long', year:'numeric'}).split(',')
                    p.order-date 
                        i.fas.fa-table
                        = '日期時間：'
                        input.order-date-input(type='datetime-local')
                    //- p.order-time
                    //-     i.fas.fa-clock
                    //-     = '時間：'  
                    //-     input(type='datetime-local' value= `${dateTime[1].trim()}`) 
                       
                    .oder-total
                        i.fas.fa-coins
                        = `總額：${order.products.reduce((acc, ele)=> acc + ele.quantity * ele.price ,0)}`
                    
                    .paid
                        i.fab.fa-paypal
                        = `已付：`
                        select.options-menu
                            option(value='true') 是  
                            option(value='false') 否  

                    .edit-delete-icons-con
                        i.far.fa-check-square.confirm-edit-icon_admin(data-order-id= `${order._id}`)



                .all-orders
                    each product in order.products
                        .product-order.update-product-order_admin
                            
                            a: img.product-img.product-img-order(src=`/img/products/${product.image}` data-overview-img= product.image)
                            .info-con-order     
                                p.price= `${product.name}` 
                                
                                p= `$${product.price} * ` 
                                    input(type='number' min=1 value= `${product.quantity}`)
                                - const dateTime = order.createdAt.toLocaleString({month: 'long', year:'numeric'}).split(',')
                            i.fas.fa-trash.remove-order-item

                               
                               
                   

                

               



       

    