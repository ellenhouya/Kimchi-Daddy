                            input(type="file" name='images_1' id='image-1_add' class='add-product-img-input' hidden)

                        .img-label-input-group_add
                            img.product-img(src='/img/products/product-1-2.jpeg' style='opacity:0.6')
                            label(for='image-2_add')= 'Image 2'
                            input(type="file" name='images_1' id='image-2_add' class='add-product-img-input' hidden)

                        .img-label-input-group_add
                            img.product-img(src='/img/products/product-1-2.jpeg' style='opacity:0.6')
